<div class="cc-nav">
  <div class="cc-nav-i">
    <a class="cc-nav-logo" href="/">Catcalled NYC</a>
    <span class="cc-nav-items">
      <%= link_to "Respond", respond_path %>
      <a href="http://catcalled.tumblr.com">Blog</a>
      <%= link_to "About", about_path %>
      <a class="cc-nav-part-link" href="/">The Participants</a>
    </span>
  </div>

  <div class="cc-nav-participants clearfix">
    <% @participants.reverse_each do |participant| %>
      <%= link_to participant_path(participant.name) do %>
        <%= image_tag "participants/#{participant.name}.png", alt: participant.name, class: "cc-participant-pic" %>
        <div class="cc-nav-participant-name">#<%= participant.name %></div>
      <% end %>
    <% end %>
  </div>
</div>

