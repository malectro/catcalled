<h1><%= @name %>'s Entries</h1>

<%= render 'form' %>

<% @entries.each do |entry| %>
  <div><%= entry.participant.name %></div>
  <div><%= entry.written_at.to_s(:long_ordinal) %></div>
  <div><%= entry.occured_at.to_s(:long_ordinal) %></div>
  <div><%= raw entry.text_html %></div>
  <div><%= link_to 'edit', edit_admin_entry_path(entry) %></div>
<% end %>

<%= link_to 'Back', admin_participants_path %>
