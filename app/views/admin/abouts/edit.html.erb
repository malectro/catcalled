<h1>Edit Catcalled Descriptions</h1>

<%= form_for([:admin, @about], url: admin_about_path) do |f| %>
  <div><%= notice %></div>

  <div>
    <div>Site Header</div>
    <%= f.text_area :short %>
  </div>

  <div>
    <div>About Page</div>
    <%= f.text_area :long %>
  </div>

  <div>
    <div>
      <%= f.label :tumblr_post_id, "Tumblr Post Id" %><br />
      <%= f.text_field :tumblr_post_id %>
    </div><br />

    <div>
      <%= f.label :tumblr, "Use Tumblr post on the home page?" %>
      <%= f.check_box :tumblr %>
    </div>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', admin_participants_path, class: 'back' %>

