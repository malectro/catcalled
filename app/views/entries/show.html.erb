<%= render "layouts/nav" %>

<div class="cc-paper cc-participant-page clearfix">
  <%= render "participants/nav" %>
  <div class="cc-col-r">
    <div class="cc-entry-book-wrap">
      <h2><crossing></crossing>Entries</h2>
      <div class="cc-entry-book">
        <div class="cc-entry" data-id="<%= @entry.id %>">
          <h3><%= @entry.occured_at.strftime('%a, %b %d') %></h3>
          <div><%= raw @entry.text_html %></div>
          <div class="cc-entry-actions clearfix">
            <% if @entry != @participant.entries.last %>
              <%= link_to "next", participant_entry_path(@participant.name, @entry_index + 1), class: "cc-entry-next" %>
            <% else %>
              <%= link_to "next", exit_participant_path(@participant.name), class: "cc-exit-link" %>
            <% end %>
            <% if @entry != @participant.entries.first %>
              <%= link_to "previous", participant_entry_path(@participant.name, @entry_index - 1), class: "cc-entry-prev" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
